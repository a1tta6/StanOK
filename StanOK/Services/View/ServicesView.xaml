<Window x:Class="StanOK.Services.View.ServicesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StanOK.Services.View"
        mc:Ignorable="d"
        Title="Окно данных по оказанным услугам" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding RepairModel}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="70" FontSize="18"
                                    Header="Номер" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Width="*" FontSize="18"
                                    Header="Вид станка" Binding="{Binding Path=MachineName}"/>
                <DataGridTextColumn Width="*"  FontSize="18"
                                    Header="Ремонт" Binding="{Binding Path=RepairName}"/>
                <DataGridTextColumn Width="*"  FontSize="18"
                                    Header="Дата начала" Binding="{Binding Path=DateBegin}"/>
                <DataGridTextColumn Width="*"  FontSize="18"
                                    Header="Примечание" Binding="{Binding Path=Comment}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="1">
            <Button Content="Назад"
                    FontSize="18"
                    Margin="30,0,0,0"
                    Height="50" Width="100"/>
            <Button Content="Обновить"
                    FontSize="18"
                    Margin="30,0,0,0"
                    Height="50" Width="100"/>
            <Button Content="Получить справку по видам станков" 
                    FontSize="18"
                    HorizontalAlignment="Center" 
                    Margin="30,0,0,0"
                    Height="50" Width="232"/>
            <Button Content="Удалить"
                    FontSize="18"
                    Margin="30,0,0,0"
                    Height="50" Width="100"/>
            <Button Content="Добавить"
                    FontSize="18"
                    Margin="30,0,0,0"
                    Height="50" Width="100"/>
        </StackPanel>
        

    </Grid>
</Window>
